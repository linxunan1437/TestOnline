<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lh.testonline">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="智慧课堂"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".AccountManageActivity" />
        <activity android:name=".TestManagerActivity" />
        <activity android:name=".OpeningTestActivity" />
        <activity android:name=".TestAcitivity" />
        <activity android:name=".modifiypasswordAcitivity" />
        <activity
            android:name=".ModifyClassActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ChatActivity" />
        <activity
            android:name=".GiveTestActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".CreateQuestion"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ChangeCourseActivity" />
        <activity
            android:name=".SearchQuestionActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".TestTimeSettingActivity" />
        <activity android:name=".CreateClassActivity" />
        <activity android:name=".QuestionDetailActivity" />
        <activity android:name=".ClassManageActivity" />
    </application>

</manifest>