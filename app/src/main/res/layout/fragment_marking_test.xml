<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_marking_test"
    tools:context="com.example.lh.testonline.MarkingFragment">


    <TextView
        android:text="null"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:textSize="30sp"
        android:id="@+id/QuestionText" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/textAnswer"
        android:textSize="30sp"
        android:layout_below="@+id/QuestionText"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/textCorrectAnswer"
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/textAnswer"
        android:layout_alignBottom="@+id/textYourAnswer"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editMarking" />

</RelativeLayout>
