<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_test_result"
    tools:context="com.example.lh.testonline.TeacherTestResult">


    <TextView
        android:text=""
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:id="@+id/textStudentStatus"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textCorrectAnswer"
        android:layout_alignParentStart="true" />

    <TextView
        android:text=""
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:id="@+id/textCorrectAnswer"
        android:textSize="24sp"
        android:layout_below="@+id/QuestionText"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView30" />

    <TextView
        android:text=""
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:textSize="24sp"

        android:scrollbars="vertical"
        android:id="@+id/QuestionText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <TextView
        android:text="问题"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView31"
        android:textSize="24sp" />

    <TextView
        android:text="答案:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView30"
        android:textSize="24sp"
        android:layout_below="@+id/QuestionText"
        android:layout_alignParentStart="true" />
</RelativeLayout>
