<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/rainbow"
    tools:context="com.example.lh.testonline.SignupActivity">

    <TextView
        android:text="确认密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/editPassword"
        android:layout_alignParentStart="true"
        android:id="@+id/textView10"
        android:textSize="18sp"
        android:layout_above="@+id/checkIsTutor" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editPassword"
        android:layout_above="@+id/editTwicePass"
        android:hint="输入密码"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editUserName"
        android:hint="输入用户名"
        android:layout_above="@+id/editPassword"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="用户名"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/editUserName"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView9"
        android:textSize="18sp" />

    <TextView
        android:text="密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/textView9"
        android:textSize="18sp"
        android:layout_below="@+id/editUserName"
        android:layout_above="@+id/textView10"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="再次输入密码"
        android:id="@+id/editTwicePass"

        android:layout_above="@+id/checkIsTutor"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="注册"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSubmit"
        android:background="@android:color/transparent"
        android:textSize="35sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <CheckBox
        android:text="是否教师"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/checkIsTutor"
        android:layout_marginBottom="18dp"
        android:layout_above="@+id/buttonSubmit"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

</RelativeLayout>
