<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_question_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/create_question_bg"
    tools:context="com.example.lh.testonline.QuestionDetailActivity">

    <TextView
        android:text="问题"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView22"
        android:textSize="24sp" />

    <Button
        android:text="返回"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonReturn"
        android:layout_below="@+id/textViewAnswer"
        android:background="#00000000"
        android:textSize="24sp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textSize="20sp"
        android:id="@+id/textViewAnswer"
        android:layout_below="@+id/textView25"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/textViewQuestion"
        android:textSize="20sp"
        android:layout_below="@+id/textView22"
        android:layout_alignParentStart="true"
        android:scrollbars="vertical"/>

    <TextView
        android:text="答案"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:id="@+id/textView25"
        android:layout_below="@+id/textViewQuestion"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="分数:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewAnswer"
        android:layout_alignParentStart="true"
        android:id="@+id/textView21"
        android:textSize="24sp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewAnswer"
        android:layout_toEndOf="@+id/textView21"
        android:id="@+id/textViewScore"
        android:textSize="24sp" />
</RelativeLayout>
